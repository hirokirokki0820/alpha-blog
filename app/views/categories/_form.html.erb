<%= render(@category.new_record? ? 'shared/errors_new' : 'shared/errors_edit', obj: @category) %>

<%= form_with model: @category do |f| %>
  <div class="shadow p-3 mb-3 bg-info rounded">
    <div class="mb-3 row">
      <%# f.label "題名" で日本語表記にできる %>
      <%= f.label :name, class: "col-2 col-form-label text-light" %>
      <div class="col-10">
        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "カテゴリー名を入力してください" %>
      </div>
    </div>

    <div class="mb-3 row justify-content-center">
      <%= f.submit class: "btn btn-outline-light btn-lg col-5" %>
      <%#= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg col-5") %>
    </div>
  </div>
<% end %>
