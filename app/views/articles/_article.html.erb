<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-body rounded">
          <div class="card-header fst-italic">
            by <%= article.user.username if article.user %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success text-decoration-none" %></h5>
            <p class="card-text"><%= truncate(article.description, length: 100) %></p>
            <%= link_to "詳細", article_path(article), class: "btn btn-outline-success" %>
            <%= link_to "編集", edit_article_path(article), class: "btn btn-outline-info" %>
            <%= link_to "削除", article_path(article), class: "btn btn-outline-danger", data: {
        turbo_method: :delete,
        turbo_confirm: '本当に削除しますか？'
        } %>
          </div>
          <div class="card-footer text-muted">
            <small>作成日 <%= l article.created_at %>,
              更新日 <%= l article.updated_at %></small>
          </div>
        </div>
    </div>
    </div>
  <% end %>
</div>

<p>
<%= link_to 'Create new article', new_article_path, class: 'btn btn-outline-primary' %>
</p>
