<h1 class="text-center mt-4"><%= @user.username %> のプロフィール</h1>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">
  <% if logged_in? && @user == current_user %>
    <%= link_to "プロフィールを編集する", edit_user_path(@user), class: "btn btn-outline-info" %>
  <% end %>
</div>

<h3 class="text-center mt-4"><%= @user.username %> さんの記事一覧</h3>

<div class="mt-3">
<%= paginate @articles %>
</div>

<%= render 'articles/article' %>

<div class="mt-3">
<%= paginate @articles %>
</div>
