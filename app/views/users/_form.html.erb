<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">

    <% #if local_assigns[:edit_flag].present? %>
      <%#= render 'shared/errors_edit', obj: @user %>
    <%# else %>
      <%#= render 'shared/errors_new', obj: @user %>
    <%# end %>

    <%= render(@user.new_record? ? 'shared/errors_new' : 'shared/errors_edit', obj: @user) %>

      <div class="shadow p-3 mb-3 bg-info rounded">

        <div class="mb-3 row">
          <%# f.label "題名" で日本語表記にできる %>
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "ユーザー名を入力してください" %>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "メールアドレスを入力してください" %>
          </div>
        </div>

        <div class="mb-3 row">
          <%= f.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "パスワードを入力してください" %>
          </div>
        </div>

        <div class="mb-3 row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg col-5" %>
          <%#= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg col-5") %>
        </div>
      </div>

    </div>

    <div div class="row text-center">
      <%= link_to '[ Cancel and return to articles listing ]',articles_path, class: "text-info text-decoration-none" %>
    </div>
  </div>
</div>
